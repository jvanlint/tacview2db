{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Clear DB Verbose",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "program": "${workspaceFolder}/app/tacview2db.py",
            "console": "integratedTerminal",
            "args": [
                "-v",
                "-c",
                "../data/mission1_server.xml"
            ]
        },
        {
            "name": "Python: Retain Records",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "program": "${workspaceFolder}/app/tacview2db.py",
            "console": "integratedTerminal",
            "args": [
                "../data/mission1_server.xml"
            ]
        },
        {
            "name": "Python: All Files",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "program": "${workspaceFolder}/app/tacview2db.py",
            "console": "integratedTerminal",
            "args": [
                "-c",
                "../data/mission1_server.xml",
                "../data/mission2_server.xml",
                "../data/mission3_server.xml",
            ]
        },
        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            }
        }
    ]
}